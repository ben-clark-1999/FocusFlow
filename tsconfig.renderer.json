{
    "compilerOptions": {
      "lib": ["ES2022", "DOM"],
      "target": "ES2022",
      "jsx": "react-jsx",
      "module": "ES2022",
      "moduleResolution": "Bundler",
      "strict": true,
      "types": ["vite/client"], 
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": ["src/renderer/**/*", "src/shared/**/*"]
