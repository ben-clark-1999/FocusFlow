{
    "name": "ambiently",
    "version": "1.0.0",
    "description": "Local ambient sound mixer (gapless, crossfade, presets).",
    "main": "dist/main/main.js",
    "author": "Ben Clark",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev": "rimraf dist && tsc -p tsconfig.main.json && cp src/main/preload-wrapper.cjs dist/main/ && concurrently -k \"tsc -w -p tsconfig.main.json\" \"vite\" \"electron .\"",
        "build": "rimraf dist && tsc -p tsconfig.main.json && vite build && electron-builder",
        "build:dir": "rimraf dist && tsc -p tsconfig.main.json && vite build && electron-builder --dir",
        "test": "vitest run"
    },
    "dependencies": {
        "electron": "31.4.0",
        "lottie-react": "^2.4.1",
        "react": "18.3.1",
        "react-dom": "18.3.1"
    },
    "devDependencies": {
        "@types/node": "20.12.12",
        "@types/react": "18.3.3",
        "@types/react-dom": "18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "9.0.1",
        "electron-builder": "24.13.3",
        "rimraf": "5.0.7",
        "tslib": "2.6.3",
        "typescript": "5.5.4",
        "vite": "^5.4.2",
        "vitest": "2.0.5",
        "wait-on": "8.0.1"
    },
    "build": {
        "appId": "com.benclark.ambiently",
        "productName": "Ambiently",
        "files": [
            "dist/**",
            "assets/icons/**",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "assets/loops",
                "to": "loops"
            }
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "category": "public.app-category.music"
        },
        "win": {
            "target": "nsis"
        }
    }
}
